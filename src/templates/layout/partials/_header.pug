main(class= mainClass)
  if userStyle
    section.hero.hero--main
      .hero__bg
        img.hero__bg-pic(src="./img/bg/bg-index.jpg")
      svg.decoration.decoration--main(width="1200" height="300")
          use(xlink:href= svgRoot + '#portfolio_header')
      header.header
        ul.socials.header__header-socials
          +socials(vk.src, vk.name, vk.icon, 'socials', "33", "18", 'header')
          +socials(github.src, github.name, github.icon, 'socials', "30", "24", 'header')
          +socials(linkedin.src, linkedin.name, linkedin.icon, 'socials', "26", "25", 'header')
        include ./_hamburger
      include ./_user
      a#arrowDown.arrow.hero__arrow(title="Читайте дальше")
        +svg(svgRoot + '#arrow_down', 'arrow', "27", "18")
  else if blogStyle
    section.hero
      .hero__bg
        img.hero__bg-pic(src="./img/bg/bg-index.jpg")
      svg.decoration.decoration--blog(width="300" height="250")
          use(xlink:href= svgRoot + '#blog_header')
      header.header
        ul.socials.header__header-socials
          +socials(vk.src, vk.name, vk.icon, 'socials', "33", "18", 'header')
          +socials(github.src, github.name, github.icon, 'socials', "30", "24", 'header')
          +socials(linkedin.src, linkedin.name, linkedin.icon, 'socials', "26", "25", 'header')
        include ./_hamburger
      include ./_user
      a#arrowDown.arrow.hero__arrow.arrow--blog(title="Читайте дальше")
        +svg(svgRoot + '#arrow_down', 'arrow', "27", "18")
  block main-section