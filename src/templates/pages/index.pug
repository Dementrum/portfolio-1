include ./../helpers/_variables
include ./../helpers/_mixins

include ./../layout/partials/_head
  title Сайт-Портфолио
body
  .wrapper.index
    main.main-content.index__main-content
      a.button.index__button(href="") Авторизоваться
      .welcome
        .welcome__info.info
          .info__photo
            img.info__img(src="./img/content/myphoto.jpg", alt="Глафира Чурилович")
          .info__name Глафира Чурилович
          .info__description Личный сайт веб-разработчика
          ul.info__socials
            +socials(vk.src, vk.name, vk.icon, 'info')
            +socials(github.src, github.name, github.icon, 'info')
            +socials(linkedin.src, linkedin.name, linkedin.icon, 'info')
        nav.welcome__menu
          ul.welcome__list
            +link(works.src, works.name, 'welcome')
            +link(about.src, about.name, 'welcome')
            +link(blog.src, blog.name, 'welcome')
    footer.footer.index__footer
